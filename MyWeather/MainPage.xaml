<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyWeather.MainPage">

    <StackLayout>
        <StackLayout >
            <Label Text="Погода" HorizontalOptions="Center" FontSize="32" TextColor="Black"/>
            <Image Margin="10" Source="https://cdn.icon-icons.com/icons2/2505/PNG/512/sunny_weather_icon_150663.png" />
        </StackLayout>
        <Frame Margin="10">
            <StackLayout>
                <Entry x:Name="cityInput"  WidthRequest="200" Placeholder="Город" />
                <Button x:Name="cityBtnPress" Text="Отправить" BackgroundColor="LightYellow" Clicked="cityBtnPress_Clicked"/>
            </StackLayout>
        </Frame>
        <Label x:Name="resultText" Text="" FontSize="28" Margin="20"/>
    </StackLayout>

</ContentPage>
